@model IEnumerable<KR.Models.TodoItem>

@{
    ViewData["Title"] = "To Do";
}

<h2>Мой список задач</h2>

<table class="table">
    <thead>
        <tr>
            <th>Заголовок</th>
            <th>Описание</th>
            <th>Создано</th>
            <th>Статус</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate.ToLocalTime()</td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <span class="badge bg-success">Завершено</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Выполняется</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Изменить</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Добавить</a>
